<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterAdditionalServicesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_rg_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:text="Return" />

        <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_as_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:text="Next" />
    </LinearLayout>

    <CheckBox android:id="@+id/checkbox_chair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="beach chair"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_shoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="beach shoes"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_umbrella"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="beach umbrella"
        android:onClick="onCheckboxClicked"/>

    <CheckBox android:id="@+id/checkbox_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="beach vehicle"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_soccer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="beach soccer"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_bathroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="use bathroom"
        android:onClick="onCheckboxClicked"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="Note"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="353dp"
            android:layout_height="78dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/tv_phone"
            android:background="@drawable/editext_selector"
            android:gravity="left|center"
            android:hint="Add other information"
            android:inputType="text"
            android:maxLength="100"

            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textSize="17sp" />
    </RelativeLayout>

</LinearLayout>